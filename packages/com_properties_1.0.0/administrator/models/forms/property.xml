<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/components/com_properties/models/fields">

       <field name="id" type="text" default="0" label="COM_PROPERTIES_FORM_LBL_PROPERTY_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

	   <field
			name="created_by"
			type="createdby"
			label="COM_PROPERTIES_PROPERTY_CREATED_BY_LBL"
			description="COM_PROPERTIES_PROPERTY_CREATED_BY_DESC"
			default=""
			/>
	
		<field
			name="state"
			type="list"
			label="COM_PROPERTIES_PROPERTY_STATE_LBL"
			description="COM_PROPERTIES_PROPERTY_STATE_DESC"
			class="inputbox"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	
		<field
			name="ordering"
			type="hidden"
			label="COM_PROPERTIES_PROPERTY_ORDERING_LBL"
			description="COM_PROPERTIES_PROPERTY_ORDERING_DESC"
			default=""
			/>

	</fieldset>
</form>
